@using CloudPlatform.Tool.StorageAccount;
@model IReadOnlyList<StorageContainer>

@if (Model.Count == 0)
{
    <div class="alert alert-info">
        @SharedLocalizer["No Posts Found"]
    </div>
    <div class="mb-4"></div>
}
else
{
    <div class="parent-nav" data-bs-toggle="collapse" aria-expanded="false" aria-controls="supported-versions-table" data-bs-target="#supported-versions-table">
        <i class="glyphicon glyphicon-chevron-right"></i>支持的版本
    </div>

    <div id="supported-versions-table" class="table-wrap collapse show" style="">
        <table class="table" aria-labelledby="dotnetcore-version">
            <thead>
                <tr>
                    <th>版本</th>
                    <th>发布类型</th>
                    <th>支持阶段</th>
                    <th>最新发布</th>
                    <th>最新发布日期</th>
                    <th>存储类型</th>
                </tr>
            </thead>
            <tbody>


                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-page="/Package" 
                            asp-route-containername="@item.Name">@item.Name</a>
                        </td>
                        <td>
                            <button type="button" class="btn btn btn-info btn-sm" data-toggle="tooltip" data-placement="top" title="" role="tooltip" tabindex="0" data-original-title="长期支持(LTS)版本具有较长的支持期(3 年)。如果需要在同一版本的 WMS 应用上保持更长时间的支持，请使用 LTS。" data-bs-original-title="长期支持(LTS)版本具有较长的支持期(3 年)。如果需要在同一版本的 .NET 上保持更长时间的支持，请使用 LTS。">
                                长期支持<span class="badge badge-dark">①</span>
                            </button>
                        </td>
                        <td>
                            <button type="button" class="btn btn btn-info btn-sm" data-toggle="tooltip" data-placement="top" title="" role="tooltip" tabindex="0" data-original-title="在活动支持期间，WMS 应用版本会进行更新，以改进功能并缓解安全漏洞。" data-bs-original-title="在活动支持期间，.NET 版本会进行更新，以改进功能并缓解安全漏洞。">
                                活动<span class="badge badge-dark">①</span>
                            </button>
                        </td>
                        <td>@item.Status</td>
                        <td>@item.LastModifyTime</td>
                        <td>
                            @item.PublishType
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

}